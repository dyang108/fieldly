# Storage Configuration
STORAGE_TYPE=local  # 'local' or 's3'
LOCAL_STORAGE_PATH=.data

# S3 Configuration (required if STORAGE_TYPE=s3)
S3_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-west-1

# AI Configuration
USE_LOCAL_MODEL=true  # 'true' to use local model, 'false' for API
LLM_PROVIDER=deepseek  # 'deepseek', 'openai', 'anthropic', 'ollama'

# Local Model Configuration
OLLAMA_MODEL=deepseek-r1:14b  # Model name for local Ollama
OLLAMA_API_URL=http://localhost:11434/api/chat  # Ollama API URL

# DeepSeek API Configuration (required if using DeepSeek API)
DEEPSEEK_API_KEY=your-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions

# OpenAI API Configuration (required if using OpenAI)
OPENAI_API_KEY=your-api-key
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Anthropic API Configuration (required if using Anthropic)
ANTHROPIC_API_KEY=your-api-key
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages

# Database Configuration
DATABASE_URL=sqlite:///schemas.db

# Flask Configuration
SECRET_KEY=your-secret-key
DEBUG=true 